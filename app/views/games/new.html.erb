<h1>New game</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p> -->

<ul>
<% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %>
</ul>

<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="form" type="text" name="name" placeholder="Type in your word here">
  <input type="submit" value="Play!" class="btn">
</form>
